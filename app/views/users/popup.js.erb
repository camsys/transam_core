<% if @user %>
  // close all other popovers
  $('.has-popover').popover('hide');

  var popup_id = "#user_popup_<%= @user.id %>";
  $(popup_id).data('content', "<%= escape_javascript(render 'users/summary', :user => @user) %>");

  $(popup_id).popover({
    trigger: 'hover',
    container: 'body',
    placement: 'left',
    animation: 'true',
    html: 'true'
  }).popover('show');

  $(popup_id).addClass('has-popover');
<% end %>

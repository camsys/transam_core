.row
  = simple_form_for(@user, :url => update_password_user_path(@user), :html => {:id => 'change_password_form', :class => 'form-horizontal' }, :wrapper => :vertical_form) do |f|
    .col-md-3
      = dialog_tag("#{@user.name}", {:icon => "fa fa-user", :class => "form_part"}) do
        = render(:partial => "summary", :locals =>{:user => @user})
    .col-md-6
      = dialog_tag('Password', {:icon => 'fa fa-key', :class => "form_part"}) do
        = f.input :password, :required => true, :label => "New Password", :autocomplete => "off"
        = f.input :password_confirmation, :required => true, :label => "Re-enter New Password"
        = f.input :current_password, :required => true, :label => "Current Password"
        = f.submit "Update", :class => "btn btn-primary"
    .col-md-3
      = dialog_tag("Info", {:icon => "fa fa-question-circle", :class => "form_part"}) do
        = render(:partial => "password_instructions")

:javascript
  // jquery validations
  $('#change_password_form').validate({
    ignore: [], //validate hidden fields
    submitHandler: function(form) {
      form.submit();
    }
  });

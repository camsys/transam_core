.col-md-3
  = dialog_tag("#{@user.name}", {:icon => "fa fa-user", :class => "form_part"}) do
    = render(:partial => "summary", :locals =>{:user => @user})

.col-md-6
  = simple_form_for(@user, :html => {:class => 'form-vertical' }, :wrapper => :vertical_form, :wrapper_mappings => {:boolean => :vertical_boolean}) do |f|
    = dialog_tag('System Settings', {:icon => 'fa fa-cog', :class => "form_part"}) do
      = f.input :notify_via_email, :label => "Send messages to my email inbox"
      = f.input :num_table_rows, :collection => [10, 20, 50, 100], :include_blank => false, :label => "Number of table rows to display"
      = f.input :weather_code_id, :collection => WeatherCode.active, :include_blank => false, :label => "Local weather city"

      = f.button :submit, :class => "btn btn-primary"
.col-md-3
  = dialog_tag("Info", {:icon => "fa fa-question-circle", :class => "form_part"}) do
    %p Uncheck <strong>Send messages to my email inbox</strong> to disable email notifications to your inbox
    %p Table Rows controls the table rows displayed across the application
    %p Select your local city to display the weather forecast on your dashboard

%legend
  Profile
- SystemConfig.transam_module_names.each do |mod|
  - view_component = "#{mod}_asset_info_detail"
  - Rails.logger.debug "Checking for #{view_component}: Results = #{lookup_context.template_exists?(view_component, 'assets', true)}"
  - if lookup_context.template_exists?(view_component, 'assets', true)
    = render :partial => "assets/#{view_component}", locals: {:asset => asset}

- app_view_component = "app_asset_info_detail"
- Rails.logger.debug "Checking for #{app_view_component}: Results = #{lookup_context.template_exists?(app_view_component, 'assets', true)}"
- if lookup_context.template_exists?(app_view_component, 'assets', true)
  = render :partial => "assets/#{app_view_component}", locals: {:asset => asset}

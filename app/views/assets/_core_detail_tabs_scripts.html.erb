<script type="text/javascript">

  // Laod the google visualizations
  google.load("visualization", "1", {
    'packages': ['corechart']
  });

  // Core page loading functions
  $(document).ready(function() {

    // Form Validations
    $.validator.setDefaults({
        highlight: function(element) {
            $(element).closest('.form-group').addClass('has-error');
        },
        unhighlight: function(element) {
            $(element).closest('.form-group').removeClass('has-error');
        },
        errorElement: 'span',
        errorClass: 'help-block',
        errorPlacement: function(error, element) {
            if(element.parents('.input-group').length) {
                error.insertAfter(element.parent());
            } else {
                error.insertAfter(element);
            }
        }
    });

  	// Capture the show event for the dependents tab
  	$("a[href='#depd']").on('shown.bs.tab', function(e) {
  		transam.activate_info_popups('.info-popup');
  	});

  	// Use validation plugin to validate the forms before submittal
  	$('#new_comment').validate({
  	  submitHandler: function(form) {
  	    $(form).submit();
  	  }
  	});
  	$('#new_image').validate({
  	  submitHandler: function(form) {
  	    $(form).submit();
  	  }
  	});
  	$('#new_document').validate({
  	  submitHandler: function(form) {
  	    $(form).submit();
  	  }
  	});

  });

</script>

<%= render 'chart_scripts' %>

<% unless @core_tbl_formatter_load_count == 1 %>
  <%= render 'shared/table_formatters' %>
<% end %>
